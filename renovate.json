{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":enableVulnerabilityAlerts",
    "group:allNonMajor",
    "security:minimumReleaseAgeNpm",
    ":maintainLockFilesWeekly",
    "schedule:weekends"
  ],
  "autoApprove": false,
  "automergeType": "pr",
  "automerge": false,
  "configMigration": true,
  "labels": [
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "matchDepNames": [
        "bootstrap"
      ],
      "enabled": false
    }
  ],
  "prConcurrentLimit": 1,
  "prHourlyLimit": 0,
  "rangeStrategy": "auto",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/London"
}
