<h2>Forms</h2>
<form>
  <div class="form-group">
    <label class="form-label" for="exampleInputEmailAgain"
      >Email address <span class="field-required">(Required)</span></label
    >
    <input
      type="email"
      class="form-control"
      id="exampleInputEmailAgain"
      placeholder="Email"
    />
  </div>
  <div class="form-group">
    <label class="form-label" for="exampleInputPassword1"
      >Email <span class="field-hint">This field is read-only; useful for prepopulated information</span></label
    >
    <input
      type="email"
      class="form-control"
      id="exampleInputPassword1"
      placeholder="Password"
      readonly
      value="dm@talis.com"
    />
  </div>
  <div class="form-group">
    <label class="form-label" for="exampleInputPassword1"
      >Password</label
    >
    <input
      type="password"
      class="form-control"
      id="exampleInputPassword2"
      disabled
      placeholder="I'm disabled"
    />
  </div>
  <div class="form-group">
    <label class="form-label" for="searchInput">Search</label>
    <div class="input-group">
      <input
        class="form-control"
        id="searchInput"
        type="text"
        placeholder="Search the library catalogue"
      />
      <button class="btn btn-default" type="button">
        <i class="fa fa-fw fa-search"></i>
        <span class="visually-hidden">Search</span>
      </button>
    </div>
  </div>
  <div class="form-group">
    <label class="form-label" for="select-num-again"
      >Choose a number</label
    >
    <select class="form-select" id="select-num-again">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <label class="form-label" for="custom-select-again">
      Custom select
      <p class="help-block">
        Select menus have more consistent styles
      </p>
    </label>
    <select class="form-select" id="custom-select-again">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>

  <div class="form-group">
    <label for="exampleInputFile">
      <span class="field-label">File input</span>
      <span class="field-hint"
        >Bootstrap v5 adds this <code>-plaintext</code> modifer</span
      >
    </label>
    <input
      class="form-control-plaintext"
      type="file"
      id="exampleInputFile"
    />
  </div>

  <div class="form-group">
    <label for="exampleInputFile-jazzy">
      <span class="field-label">File input</span>
      <span class="field-hint"
        >â€¦it also adds this jazzy new file-picker with use of
        <code>.form-control</code></span
      >
    </label>
    <input
      class="form-control"
      type="file"
      id="exampleInputFile-jazzy"
    />
  </div>

  <div class="form-check">
    <input class="form-check-input" type="checkbox" id="checkbox" />
    <label class="form-check-label form-label" for="checkbox"
      >Check me out</label
    >
  </div>

  <div class="form-check">
    <input
      class="form-check-input"
      type="checkbox"
      id="checkbox-checked"
      checked
    />
    <label class="form-check-label form-label" for="checkbox-checked"
      >Check me out</label
    >
  </div>

  <div class="form-check">
    <input
      class="form-check-input form-check-input--alt"
      type="checkbox"
      id="checkbox-again"
    />
    <label class="form-check-label form-label" for="checkbox-again"
      >Check me out</label
    >
  </div>

  <div class="form-check">
    <input
      class="form-check-input"
      type="radio"
      id="radio"
      name="radio"
    />
    <label class="form-check-label form-label" for="radio"
      >Check me out</label
    >
  </div>

  <div class="form-check">
    <input
      class="form-check-input"
      type="radio"
      id="radio-checked"
      name="radio"
      checked
    />
    <label class="form-check-label form-label" for="radio-checked"
      >Check me out</label
    >
  </div>

  <div class="form-check">
    <input
      class="form-check-input form-check-input--alt"
      type="radio"
      id="radio-checked-again"
      name="radio"
    />
    <label
      class="form-check-label form-label"
      for="radio-checked-again"
      >Check me out</label
    >
  </div>

  <div class="form-group">
    <label class="form-label" for="testarea"></label>
    <textarea class="form-control" id="testarea" rows="3"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-default">Submit</button>
  </div>
</form>

<hr />

