<script>
  function toggleSort(btnId, colId, colNum) {
    const button = document.getElementById(btnId)
    const column = document.getElementById(colId)
    const sortedCol = document.querySelector(`col:nth-child(${colNum}`)

    const currentSort = column.getAttribute("aria-sort")

    if (currentSort == "descending") {
      clearSorts()
      column.setAttribute("aria-sort", "ascending")
    } else {
      clearSorts()
      column.setAttribute("aria-sort", "descending")
    }

    sortedCol.classList.add("sorted")
  }

  function clearSorts() {
    const thSort = document.querySelectorAll("*[aria-sort]")
    const tdSort = document.querySelectorAll(".sorted")
    const thButton = document.querySelectorAll("th > button")

    for (var i = 0; i < thSort.length; i++) {
      thSort[i].removeAttribute("aria-sort")
    }

    for (var i = 0; i < tdSort.length; i++) {
      tdSort[i].classList.remove("sorted")
    }
  }
</script>
