  <div class="col col-lg-6">
    <h1 class="mt-0 mb-1">Add resource</h1>
    <ul class="nav nav-tabs mb-4" role="tablist">
      <li class="nav-item active" role="presentation">
        <button class="nav-link active" type="button" data-bs-toggle="tab" data-bs-target="#resource-computer" aria-selected="true">From computer</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" type="button" data-bs-toggle="tab" data-bs-target="#resource-youtube">From YouTube</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" type="button" data-bs-toggle="tab" data-bs-target="#resource-existing">Use existing resource</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" type="button" data-bs-toggle="tab" data-bs-target="#resource-digitisation">From digitisations</button>
      </li>
    </ul>

    <div class="tab-content" id="resource-tabs">
      <div class="tab-pane fade show active" id="resource-computer" role="tabpanel" aria-labelledby="home-tab">
          <form>
            <div class="form-group">
              <style>
                .c-resource__file-upload {
                  border: 1px #CED4DA dashed;
                  transition: background-color .4s ease;
                }

                .c-resource__file-upload:hover,
                .c-resource__file-upload:focus {
                  background-color: #F8F9FA;

                }
              </style>
              <label for="resource-file" class="form-label">Resource <span class="field-required">(Required)</span></label>
              <input class="form-control visually-hidden" id="resource-file" type="file">

              <div class="c-resource__file-upload d-flex align-items-center justify-content-center flex-column p-4">
                  <i class="fal fa-cloud-upload fa-2x text-primary"></i>
                  <span class="c-resource__file-upload__title lead text-center">Drag & drop file here</span>
                  <span class="c-resource__file-upload__separator">or</span>
                  <button class="btn btn-default js-toggle-upload" type="button" onclick="uploadFile()">Browse files</button>
              </div>

              <div class="c-resource__file-progress" hidden>
                  <div class="progress mb-1">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" aria-label="Upload progress"></div>
                  </div>
                  <span class="c-resource__file-progress__text text-primary d-block mb-2">Uploading [filename] <b>25%</b></span>
                  <button type="button" class="btn btn-default" onclick="uploadFile()">
                    <i class="fas fa-times-circle"></i>
                    Cancel upload
                  </button>
              </div>
              <script>
                function uploadFile() {
                  toggleProgress();
                  toggleUploader();
                }

                function toggleProgress() {
                  document.querySelector('.c-resource__file-progress').hidden = !document.querySelector('.c-resource__file-progress').hidden;
                }


                function toggleUploader() {
                  document.querySelector('.c-resource__file-upload').hidden = !document.querySelector('.c-resource__file-upload').hidden;
                }
              </script>
            </div>
            <div class="form-group">
              <label for="resource-title" class="form-label">Title <span class="field-required">(Required)</span></label>
              <div class="col col-lg-6">
                <input type="text" id="youtube-title" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label for="resource-title" class="form-label">Description</label>
              <div class="col col-lg-6">
                <textarea rows="3" id="youtube-description" class="form-control"></textarea>
              </div>
            </div>
            <div class="controls">
              {{ button("Save", { type: 'primary' }) }}
            </div>
          </form>
      </div>

      <div class="tab-pane fade" id="resource-youtube" role="tabpanel" aria-labelledby="profile-tab">
          <form>
            <div class="form-group">
              <label for="resource-title" class="form-label">YouTube URL <span class="field-required">(Required)</span></label>
              <div class="col col-lg-6">
                <input type="url" id="youtube-url" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label for="resource-title" class="form-label">Title <span class="field-required">(Required)</span></label>
              <div class="col col-lg-6">
                <input type="text" id="youtube-title" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label for="resource-title" class="form-label">Description</label>
              <div class="col col-lg-6">
                <textarea rows="3" id="youtube-description" class="form-control"></textarea>
              </div>
            </div>
            <div class="controls">
              {{ button("Save", { type: 'primary' }) }}
            </div>
          </form>
      </div>

      <div class="tab-pane fade" id="resource-existing" role="tabpanel" aria-labelledby="contact-tab">
          <form role="search">
      <div class="form-group">
        <label for="resource-title" class="form-label">Search by resource name or type</label>
        <div class="col col-lg-6 input-group">
          <input type="text" id="resource-title" class="form-control" />
          <span class="input-group-text">
            <i class="fal fa-search"></i>
            <span class="visually-hidden">Search</span>
          </span>
        </div>
      </div>
    </form>

